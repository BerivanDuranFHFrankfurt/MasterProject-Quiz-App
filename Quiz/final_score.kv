<ScoreScreen>:
    name: "final_score"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        background_color: rgba(60, 12, 156, 255)
        Image: 
            source: "background.png"
        Label: 
            text: "Ergebnisse"
            font_name: "ADLaM_Display"
            font_size: "50sp"
            halign: "center"
            pos_hint: {"center_x": .3, "center_y": .9}
            color: rgba(29, 29, 171, 255)
            line_height: 1.1
        BoxLayout:
            size_hint: 1, .6
            pos_hint: {"center_x": .475, "center_y": .3} 
            padding: 175   
            Image:
                source: "pandabar.png"
                pos_hint:{"left":0.9,"top":0.0}
        BoxLayout:
            size_hint: 1, .5
            pos_hint: {"center_x": .5, "center_y": .55} 
            padding: -50  
            Image: 
                source: "speech_bubble_big.png"
                pos_hint: {"center_x": 2, "center_y": 0.425}
                ScrollView:  # Hier beginnt die ScrollView für den Ergebnistext
                    size: 1000, 250  # Legen Sie die gewünschte Größe der ScrollView fest
                    pos: (150, 300)
                    Label: 
                        id: score_label
                        text: ""
                        font_name: "ADLaM_Display"
                        font_size: "16sp"
                        halign: "left"
                        size_hint_y: None  
                        height: self.texture_size[1] 
                        color: 0, 0, 0, 1
                        line_height: 1
                        
                    

        Button: 
            text: "zum Start"
            font_name: "ADLaM_Display"
            font_size: "20sp"
            size_hint: .25, .10
            pos_hint: {"center_x": .425, "center_y": .06}
            background_color: 1, 1, 1, 0
            on_release: root.manager.current = "start"
            canvas.before:
                Color:
                    rgb: rgba(255, 192, 0, 255)
                RoundedRectangle:
                    size: self.size  
                    pos: self.x, self.y + 5
                    radius: [10]
        Button: 
            text: "App verlassen"
            font_name: "ADLaM_Display"
            font_size: "20sp"
            size_hint: .25, .10
            pos_hint: {"center_x": .7, "center_y": .06}
            background_color: 1, 1, 1, 0
            on_release: app.exit_app()
            canvas.before:
                Color:
                    rgb: rgba(255, 192, 0, 255)
                RoundedRectangle:
                    size: self.size  
                    pos: self.x, self.y + 5
                    radius: [10]